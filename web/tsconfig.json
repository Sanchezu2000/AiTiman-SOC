{
  "compilerOptions": {
    "target": "esnext",                 
    "module": "esnext",                   
    "strict": true,                       
    "jsx": "react-jsx",                   
    "moduleResolution": "node",           
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,           
    "isolatedModules": true,             
    "noEmit": true,                      
    "baseUrl": ".",                       
    "paths": {
      "@/*": ["resources/js/*"]           
    }
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "./resources/js/**/*"               
  ],
  "exclude": [
    "node_modules"                        
  ]
}
